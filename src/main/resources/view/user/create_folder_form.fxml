<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.user.NewFolderFormController"
      prefWidth="200.0" prefHeight="200.0">
    <children>
        <TextField fx:id="folderNameField" promptText="Enter folder name" />
        <Button text="Create" onAction="#createFolder" alignment="CENTER" VBox.vgrow="ALWAYS" />
    </children>
</VBox>